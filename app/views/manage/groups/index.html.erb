<%= link_to 'Добавить группу', new_manage_groups_path, class: ['btn', 'btn-default'] %>

<% @groups.each do |group| %>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <%= group.title %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <%= group.uid %>
        </div>
      </div>
    </div>
  </div>
<% end %>
